<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wangyang.diyviewlibrary.Main2Activity">

   <ImageView
       android:id="@+id/image"
       android:src="@drawable/xyjy"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
   <com.wangyang.divviewlibrary.view.magnifier.MagnifierView
       android:id="@+id/MagnifierView"
       android:layout_width="200dp"
       app:magnifierCanMove="false"
       app:magnifierPaddingLeft="10dp"
       app:magnifierPaddingTop="10dp"
       app:magnifierRadius="50"
       app:magnifierScale="1.5"
       android:layout_height="150dp" />
   <com.wangyang.divviewlibrary.view.radarview.RadarView
       app:isStartScan="true"
       app:lineColor="@color/colorAccent"
       app:circleNum="10"
       android:layout_alignParentBottom="true"
       android:layout_marginLeft="20dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
</RelativeLayout>
