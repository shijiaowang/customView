<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.wangyang.diyviewlibrary.MainActivity">

    <com.wangyang.divviewlibrary.view.bezierlayout.LiveBezierLayout
        android:id="@+id/lbl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <Button
            android:onClick="button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Button" />
    </com.wangyang.divviewlibrary.view.bezierlayout.LiveBezierLayout>
   <ImageButton
       android:onClick="imageClick"
       android:layout_gravity="center"
       android:src="@mipmap/ic_launcher"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
    <com.wangyang.divviewlibrary.view.progress.CircleProgressView
        android:id="@+id/progress"
        app:roundBackgroundColor="@color/colorAccent"
        android:layout_margin="20dp"
        android:layout_gravity="right"
        android:layout_width="50dp"
        android:layout_height="50dp" />
</FrameLayout>
