<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--状态view-->
    <declare-styleable name="StatusView">
        <attr name="success_view" format="reference" />
        <attr name="error_view" format="reference" />
        <attr name="empty_view" format="reference" />
        <attr name="no_network_view" format="reference" />
        <attr name="loading_view" format="reference" />
    </declare-styleable>
    <!--圆形进度条-->
    <declare-styleable name="CircleProgressView">
        <attr name="roundBackgroundColor" format="color" />
        <attr name="roundBgShow" format="boolean" />
        <attr name="roundProgressColor" format="color" />
        <attr name="progressTextColor" format="color" />
        <attr name="roundWidth" format="dimension" />
        <attr name="progressTextSize" format="dimension" />
        <attr name="textShow" format="boolean" />
        <attr name="maxProgress" format="integer" />
    </declare-styleable>
    <!--字母索引-->
    <declare-styleable name="SlideCursorView">
        <attr name="normaTextSize" format="dimension" />
        <attr name="selectTextSize" format="dimension" />
        <attr name="normalTextColor" format="color" />
        <attr name="selectTextColor" format="color" />
        <attr name="normalBackgroundColor" format="color" />
        <attr name="selectBackgroundColor" format="color" />
    </declare-styleable>
    <!--霓虹灯-->
    <declare-styleable name="NeonLightsTextView">
        <attr name="neonLightsColor" format="color" /><!--霓虹灯中间的颜色-->
        <attr name="isSingleMove" format="boolean" /><!--是否是一行一行移动-->
        <attr name="moveSpeed" format="integer" /><!--霓虹灯速度-->
        <attr name="neonLightsNumber" format="integer" /><!--霓虹灯显示的文字个数-->
        <attr name="isReversal" format="boolean" /><!--是否反转显示-->

    </declare-styleable>
    <!--放大镜-->
    <declare-styleable name="MagnifierView">
        <attr name="magnifierCanMove" format="boolean" /><!--是否跟随手指移动-->
        <!--以下两个属性最好使用在放大镜固定不动的情况-->
        <attr name="magnifierPaddingTop" format="dimension" /><!--放大镜初始值距离上方的位置-->
        <attr name="magnifierPaddingLeft" format="dimension" /><!--放大镜初始值距离左方的位置-->

        <attr name="magnifierRadius" format="integer" /><!--放大镜的半径-->
        <attr name="magnifierScale" format="float" /><!--放大镜放大倍数-->

    </declare-styleable>
    <!--雷达扫描view-->
    <declare-styleable name="RadarView">
        <attr name="startColor" format="color" /><!--雷达扫描开始颜色-->
        <attr name="endColor" format="color" /><!--雷达扫描结束颜色-->
        <attr name="backgroundColor" format="color" /><!--雷达背景颜色-->
        <attr name="circleNum" format="integer" /><!--雷达中共有几个圆环-->
        <attr name="lineColor" format="color" /><!--雷达圆环的颜色-->
        <attr name="scanRotate" format="float" /><!--每次旋转增加的角度-->
        <attr name="onceTime" format="integer" /><!--多久秒旋转一次-->
        <attr name="isStartScan" format="boolean" /><!--默认是否开启扫描-->
    </declare-styleable>
    <!--心电图view-->
    <declare-styleable name="HeartElectricView">
        <attr name="heartMap" format="reference" /><!--心电图-->
        <attr name="heartColor" format="color" /><!--心电图颜色-->
        <attr name="heartBgColor" format="color" /><!--心电图背景颜色-->
        <attr name="heartTime" format="integer" /><!--心电图多长时间绘制一次-->
        <attr name="heartSpeed" format="float" /><!--心电图增量，速度-->
    </declare-styleable>
</resources>